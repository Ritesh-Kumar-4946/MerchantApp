<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_bg">


    <com.merchantapp.ritesh.CustomFonts
        android:id="@+id/iv_top_image_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Go Chela"
        android:textColor="@color/login_email"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/sv_main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top_image_signup"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/rv_main_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_login_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Signup"
                    android:textColor="@color/login_email"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_signup"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_store_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_store_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:text="Store Type *"
                            android:textColor="@color/black_color"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/rl_spinner_store_type"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/tv_store_type"
                            android:background="@color/white_color">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/mtspn_store_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Please Select"
                                android:textSize="15sp"
                                app:ms_arrow_tint="@color/black_color"
                                app:ms_dropdown_height="wrap_content"
                                app:ms_dropdown_max_height="300dp"
                                app:ms_hide_arrow="false"
                                app:ms_text_color="@color/bg_app" />


                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_username"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">


                    <RelativeLayout
                        android:id="@+id/rl_store_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_store_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:text="Store Category *"
                            android:textColor="@color/black_color"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/rl_spinner_store_category"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/tv_store_category"
                            android:background="@color/white_color">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/mtspn_store_category"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Please Select"
                                android:textSize="15sp"
                                app:ms_arrow_tint="@color/black_color"
                                app:ms_dropdown_height="wrap_content"
                                app:ms_dropdown_max_height="300dp"
                                app:ms_hide_arrow="false"
                                app:ms_text_color="@color/bg_app" />


                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_email"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_person_name"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_person_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_user" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_person_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_cp_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Your Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_person_name"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_email"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="20dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_email_addresss" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Business Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_email_address"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_phone_number"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_phone_number" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:digits="0123456789"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_phone_number"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_business_name"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_business_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_business_name" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_business_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_business_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Business Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_business_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_business_name"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_business_address"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_business_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_business_address" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_business_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Business Address"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_business_address_pin_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_business_address"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_signup_business_address_pin_code"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_signup_business_address_pin_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_pin_code" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_signup_business_address_pin_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:digits="0123456789"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="Pin Code"
                            android:inputType="text"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_text_heading_ping"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_business_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_business_address_pin_code"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:text="State *"
                            android:textColor="@color/black_color"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/rl_spinner_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_state"
                            android:background="@color/white_color">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/mtspn_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Please Select"
                                android:textSize="15sp"
                                app:ms_arrow_tint="@color/black_color"
                                app:ms_dropdown_height="wrap_content"
                                app:ms_dropdown_max_height="300dp"
                                app:ms_hide_arrow="false"
                                app:ms_text_color="@color/bg_app" />


                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_signup_business_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_et_signup_business_state"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_state"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:text="City *"
                            android:textColor="@color/black_color"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/rl_spinner_city"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/tv_city"
                            android:background="@color/white_color">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/mtspn_city"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Please Select"
                                android:textSize="15sp"
                                app:ms_arrow_tint="@color/black_color"
                                app:ms_dropdown_height="wrap_content"
                                app:ms_dropdown_max_height="200dp"
                                app:ms_hide_arrow="false"
                                app:ms_text_color="@color/bg_app" />


                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_sign_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_et_signup_business_city"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/rl_et_sign_password"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="17dp"
                        android:paddingEnd="17dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="25dp">

                        <ImageView
                            android:id="@+id/iv_et_sign_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_login_password" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_sign_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="50dp"
                        android:textColorHint="@color/gray_text_heading_ping">

                        <in.anshul.libray.PasswordEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="@color/black_color"
                            android:textSize="15sp"
                            app:hide_drawable="@drawable/ic_show_password"
                            app:password_visible="false"
                            app:show_drawable="@drawable/ic_hide_password" />


                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>


                <!--<android.support.v7.widget.CardView-->
                <!--android:id="@+id/cv_et_sign_btn_signup"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/cv_et_sign_re_password"-->
                <!--android:layout_centerHorizontal="true"-->
